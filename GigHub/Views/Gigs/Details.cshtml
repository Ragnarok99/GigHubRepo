@model GigHub.Core.ViewModels.GigDetailsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @Model.Gig.Artist.Name
    @if (User.Identity.IsAuthenticated)
    {
      
            <button class="btn @(Model.FollowingArtist? "btn-info":"btn-default" ) js-toggle-follow" data-user-id="@Model.Gig.Artist.Id">Following</button>
      
    }
</h2>

<p>
    Performing at @Model.Gig.Venue on @Model.Gig.DateTime.ToString("d MMM") at @Model.Gig.DateTime.ToString("HH:mm:ss tt")
</p>

@if (User.Identity.IsAuthenticated && Model.AttendingGig)
{
    <p>You're going to this event</p>
}


@section scripts
{

    <script>
        $(document).ready(function() {
            DetailsController.init();
        });
    </script>

}

